# When inotify or gamin used, fail2ban failed to catch log file rotation.
# The polling backend is used here.

[DEFAULT]
bantime.increment = true
bantime.rndtime = 10m

[INCLUDES]
before = paths-fedora.conf

[sshd]
enabled = true
backend = polling

[nginx-499]
enabled  = true
backend  = polling
port     = http,https
logpath  = %(nginx_access_log)s
maxretry = 10

